<Page
    x:Class="hangman3.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:hangman3"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="LightSlateGray"
    >
    <Grid>
        <Line Stroke="Brown" X1="160" X2="160" Y1="110" Y2="480" StrokeThickness="12"/>
        <Line Stroke="Brown" X1="210" X2="160" Y1="110" Y2="170" StrokeThickness="12"/>
        <Line Stroke="Brown" X1="160" X2="320" Y1="110" Y2="110" StrokeThickness="12"/>
        <Line Stroke="Yellow" X1="320" X2="320" Y1="110" Y2="180" StrokeThickness="4"/>
        <Line Stroke="Brown" X1="160" X2="80" Y1="480" Y2="480" StrokeThickness="12"/>
        <Line Stroke="Brown" X1="160" X2="240" Y1="480" Y2="480" StrokeThickness="12"/>
        <Line Stroke="Brown" X1="80" X2="20" Y1="480" Y2="560" StrokeThickness="12"/>
        <Line Stroke="Brown" X1="300" X2="240" Y1="560" Y2="480" StrokeThickness="12"/>

        <Line x:ConnectionId='2' x:Name="eyeOne" Stroke="Black" X1="300" X2="300" Y1="205" Y2="230" StrokeThickness="15" Opacity="0" />
        <Line x:ConnectionId='3' x:Name="eyeTwo" Stroke="Black" X1="330" X2="330" Y1="205" Y2="230" StrokeThickness="15" Opacity="0" />
        <Line x:ConnectionId='4' x:Name="eyeThree" Stroke="Blue" X1="300" X2="300" Y1="215" Y2="220" StrokeThickness="5" Opacity="0" />
        <Line x:ConnectionId='5' x:Name="eyeFour" Stroke="Blue" X1="330" X2="330" Y1="215" Y2="220" StrokeThickness="5" Opacity="0" />
        <Line x:ConnectionId='6' x:Name="mouth" Stroke="Black" X1="295" X2="335" Y1="245" Y2="250" StrokeThickness="5" Opacity="0"/>

        <Path x:ConnectionId='7' x:Name="printHead" Stroke="Red" StrokeThickness="5" Data="M 320,180 C 500,310 100,270 320,180 " Opacity="0" HorizontalAlignment="Stretch" Margin="0,0,0,0" UseLayoutRounding="False" VerticalAlignment="Stretch"/>
        <Line x:ConnectionId='8' x:Name="printRightArm" Stroke="Green" X1="355" X2="320" Y1="350" Y2="280" StrokeThickness="7" Opacity="0"/>
        <Line x:ConnectionId='9' x:Name="printLeftArm" Stroke="Green" X1="285" X2="320" Y1="350" Y2="280" StrokeThickness="7" Opacity="0"/>
        <Line x:ConnectionId='10' x:Name="printBody" Stroke="Green" X1="320" X2="320" Y1="265" Y2="390" StrokeThickness="7" Opacity="0"/>
        <Line x:ConnectionId='11' x:Name="printLeftLeg" Stroke="Green" X1="285" X2="320" Y1="480" Y2="385" StrokeThickness="7" Opacity="0"/>
        <Line x:ConnectionId='12' x:Name="printRightLeg" Stroke="Green" X1="320" X2="380" Y1="385" Y2="480" StrokeThickness="7" Opacity="0"/>

        <Button x:ConnectionId='13' x:Name="Reset"                     Content="RESTART" FontSize="25" Foreground="Black" Background="Orange" HorizontalAlignment="Left" Margin="23,27,0,0" VerticalAlignment="Top" Width="118" Height="45"/>
        <Button x:ConnectionId='14' x:Name="Guess"                     Content="GUESS!" FontSize="25" Foreground="Black" Background="Beige" HorizontalAlignment="Left" Margin="664,315,0,0" VerticalAlignment="Top" Width="118" Height="45"/>
        <TextBox x:ConnectionId='15' x:Name="txtInputGuess" Background="Beige" HorizontalAlignment="Left" Margin="530,315,0,0" TextAlignment="Center" FontSize="25" VerticalAlignment="Top" Width="59" Height="45" Foreground="#FF020101"/>
        <TextBlock x:ConnectionId='16' x:Name="txtRightGuess" FontSize="24" Foreground="Black" TextAlignment="Center" HorizontalAlignment="Left" Margin="480,399,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Height="41" Width="160" RenderTransformOrigin="0.493,0.69"/>
        <TextBlock x:ConnectionId='17' x:Name="txtGameOver" FontSize="30" HorizontalAlignment="Left" Margin="366,159,0,0" Text="" TextAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Height="140" Width="561"/>
        <Button x:ConnectionId='18' x:Name="NewWord"                       Content="New word" HorizontalAlignment="Left" Margin="664,51,0,0" VerticalAlignment="Top" Height="32" Width="119"/>
        <TextBox x:ConnectionId='19' x:Name="txtNewWord" HorizontalAlignment="Left" Margin="483,51,0,0" Text="" VerticalAlignment="Top" Width="153"/>
        <TextBlock x:ConnectionId='20' x:Name="txtWrongGuessed" TextAlignment="Center" Foreground="Red" FontSize="24" HorizontalAlignment="Left" Margin="480,500,0,0" VerticalAlignment="Top" Width="479" Height="40"/>

    </Grid>
</Page>

